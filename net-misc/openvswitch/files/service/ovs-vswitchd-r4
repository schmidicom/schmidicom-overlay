[Unit]
Description=Open vSwitch Forwarding Unit
Documentation=man:ovs-vswitchd
After=ovsdb-server.service network-pre.target systemd-udev-settle.service
Before=network.target networking.service
Requires=ovsdb-server.service
ReloadPropagatedFrom=ovsdb-server.service
AssertPathIsReadWrite=/run/openvswitch/db.sock
DefaultDependencies=no

[Service]
LimitNOFILE=1048576
Type=forking
PIDFile=/run/openvswitch/ovs-vswitchd.pid
Restart=on-failure
Environment=HOME=/run/openvswitch
EnvironmentFile=-/etc/conf.d/openvswitch
ExecStart=/usr/share/openvswitch/scripts/ovs-ctl \
          --no-ovsdb-server --no-monitor --system-id=random \
          --no-record-hostname \
          start $OVS_CTL_OPTS
ExecStop=/usr/share/openvswitch/scripts/ovs-ctl --no-ovsdb-server stop
ExecReload=/usr/share/openvswitch/scripts/ovs-ctl --no-ovsdb-server \
          --no-monitor --system-id=random \
          --no-record-hostname \
          restart $OVS_CTL_OPTS
TimeoutSec=300

[Install]
WantedBy=multi-user.target
